{% extends 'backend/base.html.twig' %}

{% block title %}User Information - Admin Dashboard{% endblock %}

{% block body %}
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid px-4">
	<h1 class="mt-4">Dashboard</h1>
	<ol class="breadcrumb mb-4">
	  <li class="breadcrumb-item active">User Information</li>
	</ol>
	<div class="card mb-4">
	  <div class="card-body">
	    <table id="datatable" class="table table-bordered">
	      <thead>
		<tr>
		  <th>ID</th>
		  <th>Username</th>
		  <th>First Name</th>
		  <th>Last Name</th>
		  <th>Email</th>
		  <th>Status</th>
		  <th>Actions</th>
		</tr>
	      </thead>
	      <tbody>
		{% for user in users %}
		  <tr>
		    <td>{{ user.id }}</td>
		    <td>{{ user.username }}</td>
		    {% if user is instanceof('App\\Entity\\Administrators') %}
		      <td>
			{{ user.firstname }}
		      </td>
		      <td>
			{{ user.lastname }}
		      </td>
		      {% else %}
		      <td></td>
		      <td></td>
		    {% endif %}
		    <td>{{ user.email }}</td>
		    <td>{{ user.status }}</td>
		    <td><a href="{{ url('backend_user_manage', { 'username': user.username }) }}">Manage</a></td>
		  </tr>
		{% endfor %}
	      </tbody>
	    </table>
	  </div>
	</div>
      </div>
    </main>
  </div>
{% endblock %}
