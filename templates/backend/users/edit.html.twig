{% extends 'backend/base.html.twig' %}

{% block title %}User Information - Admin Dashboard{% endblock %}

{% block body %}
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid px-4">
	<h1 class="mt-4">Dashboard</h1>
	<ol class="breadcrumb mb-4">
	  <li class="breadcrumb-item active">User management</li>
	</ol>
	<div class="card mb-4">
	  <div class="card-header">
	    <a href="{{ url('backend_user_history', { 'username': user.username }) }}">History</a>
	    |
	    <a href="{{ url('backend_user_flags', { 'username': user.username }) }}">Flags</a>
	  </div>
	  <div class="card-body">
	    {{ form(form) }}
	  </div>
	</div>
      </div>
    </main>
  </div>
{% endblock %}
