{% extends 'backend/base.html.twig' %}

{% block title %}User History - Admin Dashboard{% endblock %}

{% block body %}
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid px-4">
	<h1 class="mt-4">Dashboard</h1>
	<ol class="breadcrumb mb-4">
	  <li class="breadcrumb-item active">User History</li>
	</ol>
	<div class="card mb-4">
	  <div class="card-body">
	    <table id="datatable" class="table table-bordered">
	      <thead>
		<tr>
		  <th>Username</th>
		  <th>Activity</th>
		  <th>Description</th>
		  <th>Time</th>
		</tr>
	      </thead>
	      <tbody>
		{% for hist in history %}
		  <tr>
		    <td>{{ hist.user.username }}</td>
		    <td>{{ hist.activity }}</td>
		    <td>{{ hist.description }}</td>
		    <td>{{ hist.time | date('Y-m-d H:i:s') }}</td>
		  </tr>
		{% endfor %}
	      </tbody>
	    </table>
	  </div>
	</div>
      </div>
    </main>
  </div>
{% endblock %}
