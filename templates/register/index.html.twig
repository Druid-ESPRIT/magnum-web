{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <h3>Create An Account</h3>
      {% if errors|length > 0 %}
      {% for err in errors %}
      <div class="alert alert-danger text-left" role="alert">
        <h4 class="alert-heading">Oops!</h4>
        <hr>
        {{ err.message }}
      </div>
      {% endfor %}
      {% endif %}

      {{ form(form) }}
    </div>
  </div>
</div>
{% endblock %}
