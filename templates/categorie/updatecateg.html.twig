

{% extends 'base.html.twig' %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categorie</h6>
        </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Categorie Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Nom Du Categorie</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.namecateg,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(f.namecateg,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.descriptioncateg,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.descriptioncateg,{'attr':{'class':'text-danger'}}) }}
                                        <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>


                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}