{% extends 'baseback.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
<h1>Gestion des commentaire </h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>User username</th>
            <th>Message</th>

            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for comment in comments %}
        <tr>
            <td>{{ comment.getId }}</td>
            <td>{{ comment.userID.username }}</td>
            <td>{{ comment.getMessage }}</td>

            <td>
                <form method="post" action="{{ path('deletecom2', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                    <button   class="btn btn-danger"> Supprimer </button>

                </form>  
            
            </td>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</main>
</div>
</div>

</body>
{% endblock %}
