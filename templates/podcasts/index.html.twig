{% extends 'base-admin.html.twig' %}

{% block title %}Podcasts index{% endblock %}

{% block body %}
    <h1>Podcasts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Views</th>
                <th>File</th>
                <th>Image</th>
                <th>categorie</th>                
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for podcast in podcasts %}
            <tr>
                <td>{{ podcast.id }}</td>
                <td>{{ podcast.title }}</td>
                <td>{{ podcast.description }}</td>
                <td>{{ podcast.rating }}</td>
                <td>{{ podcast.views }}</td>
                <td><audio preload="auto" controls><source src="{{ asset('uploads/' ~ podcast.file) }}"></audio>{{ podcast.file }}</td>
                        <td><img src="{{ asset('uploads/' ~ podcast.image) }}"
                alt="" width="100" height="100">
                </td>
                <td>{{ podcast.idcategorie.namecateg }}</td>
                <td>
                    <a href="{{ path('app_podcasts_show', {'id': podcast.id}) }}">show</a>
                    <a href="{{ path('app_podcasts_edit', {'id': podcast.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_podcasts_new') }}">Create new</a>
{% endblock %}
