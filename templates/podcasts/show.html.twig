{% extends 'base-admin.html.twig' %}

{% block title %}Podcasts{% endblock %}

{% block body %}
    <h1>Podcasts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ podcast.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ podcast.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ podcast.description }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ podcast.rating }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ podcast.views }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ podcast.file }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ podcast.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_podcasts_index') }}">back to list</a>

    <a href="{{ path('app_podcasts_edit', {'id': podcast.id}) }}">edit</a>
    <a class="btn btn-primary" href="{{ path('imprimresv2') }}">Imprimer votre PODCAST</a>

    {{ include('podcasts/_delete_form.html.twig') }}
{% endblock %}
