{% extends 'user/base.html.twig' %}

{% block title %} {{app.user.username}}'s profile {% endblock %}

{% block content %}
  
  {% for label, messages in app.flashes(['danger', 'success']) %}
    {% for message in messages %}
      <div class="alert alert-{{ label }}">
	{{ message }}
      </div>
    {% endfor %}
  {% endfor %}

  {% if user is not null %}
    <div class="container">
      <div class="row">
	<div class="col align-self-start">
	  <img class="user-avatar" src="{{ asset('uploads/avatars/' ~ user.avatar) }}">
	</div>
      </div>
      <div class="row">
	<div class="col align-self-center">
	  <p>Username: <b>{{user.username}}#{{ user.id}}</b></p>
	</div>
      </div>
      <div class="row">
	<div class="col align-self-center">
	  <p>Email: <b>{{user.email}}</b></p>
	</div>
      </div>
      {% if app.user.id == user.id %}
	<div class="row">
	  <div class="col align-self-center">
	    <a href="{{ url('app_logout') }}">Log out.</a>
	  </div>
	</div>
      {% endif %}
  {% endif %}
{% endblock %}
