{% extends 'base.html.twig' %}

{% block body %}
{{ include('_navbar.html.twig') }}
  <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset ('img/bg-img/breadcumb3.jpg')}});">
        <div class="bradcumbContent">
            <p>Offer Manager dashboard</p>
        </div>
    </section>
 
 <!-- ##### Events Area Start ##### -->
    <section class="events-area section-padding-100">
        <div class="container">
         <div class="card-body">
                          {{form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

                        <form>
                            <div class="form-group">
                                <label class="form-label">Description</label>
                                {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Write somthing about your offer here !'}} ) }}
                                {{ form_errors(form.description, {'attr':{'class':'text-danger'}} )}}
                            </div>

                            <div class="form-group">
                                <label class="form-label">Price</label>
                                {{ form_widget(form.price , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Set a price !'}} ) }}
                                {{ form_errors(form.price, {'attr':{'class':'text-danger'}} )}}
                            </div>

                            <div class="form-group">
                                <label class="form-label">Upload Image</label>
                                {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Upload Image'}} ) }}
                                {{ form_errors(form.image, {'attr':{'class':'text-danger'}}) }}
                            </div>
                           

                            <div class="form-group mb-4">
                                <div class="checkbox checkbox-secondary">
                                    {{ form_widget(form) }}
                                    <button type="SubmitType" class="btn btn-primary ">Add</button>
                                </div>
                            </div>
                        </form>
                    </div>
{{form_end(form)}}

       
                </div>
           
            


            </div>
        </div>
    </section>
    <!-- ##### Events Area End ##### -->



{% endblock %}




