

{% extends 'base.html.twig' %}

{% block body %}

{{ include('_ellipsis.html.twig') }}
{{ include('_navbar.html.twig') }}

    <!-- ##### Breadcumb Area Start ##### -->
    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/breadcumb3.jpg') }});">
        <div class="bradcumbContent">
            <p></p>
            <h2>My Wallet</h2>
        </div>
    </section>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Events Area Start ##### -->
    <section class="events-area section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="blog-sidebar-area">

                        <!-- Widget Area -->
                        <div class="col-12 mb-30">
                            <div class="col-xl-4 col-md-auto mb-0">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                    Total Events Earnings</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ total }} DT</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-xl-4 col-md-auto mb-0">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    Total Particiapnts in All Events</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ totalP }}</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-user fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>



                    </div>
                </div>
            </div>
            <div class="row">

                {% for event in events %}
                    <!-- Single Event Area -->
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="single-event-area mb-30">
                            <div class="event-thumbnail">
                                <img src="{{ asset('uploads/'~event.Image) }}" alt="">
                            </div>
                            <div class="event-text">
                                <h4>{{ event.Name }}</h4>
                                <div class="event-meta-data">

                                    {% if event.participants|length * event.Prix > 0  %}
                                        <a href="#" class="event-place">Gains : {{ event.participants|length * event.Prix }} DT</a>

                                    {% else %}
                                        <a href="#" class="event-place">No Participants Yet</a>
                                        {% endif %}

                                    <a href="#" class="event-date"> {{ event.participants|length }} Participants</a>
                                </div>
                                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn see-more-btn">Manage Event</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}





            </div>

           {# <div class="row">
                <div class="col-12">
                    <div class="load-more-btn text-center mt-70">
                        <a href="#" class="btn oneMusic-btn">Load More <i class="fa fa-angle-double-right"></i></a>
                    </div>
                </div>
            </div>#}

        </div>

    </section>
    <!-- ##### Events Area End ##### -->


{% endblock %}

