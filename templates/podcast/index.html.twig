{% extends 'base.html.twig' %}

{% block title %}Hello PodcastController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
		<table class="table table-striped">
			<thead>
				<th>nom</th>
				<th>Description</th>
                <th>rating</th>
                <th>views</th>
                <th>file</th>
                <th>image</th>
                <th>categorie</th>
			</thead>
			<tbody>
				{% for podcast in p %}
					<tr>
						<td>{{ podcast.title }}</td>
						<td>{{ podcast.description }}</td>
                        <td>{{ podcast.rating }}</td>
                        <td>{{ podcast.views }}</td>
                        <td>{{ podcast.file }}</td>
                        <td><img src="{{ asset('uploads/' ~ podcast.image) }}"
                alt="" width="100" height="100">
                </td>
                        <td>{{ podcast.categorie.namecateg }}</td>
                                                    <td>
                                <a href="{{ path('modifPod',{'id':podcast.id}) }}">Modifier</a>
                            </td>
                            <td>
                                <a href="{{ path('supp_pod',{'id':podcast.id}) }}">Supprimer</a>
                            </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
</div>
{% endblock %}
