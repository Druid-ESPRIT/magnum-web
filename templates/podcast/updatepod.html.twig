

{% extends 'base.html.twig' %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Categorie</h6>
        </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Podcast Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Nom Du Podcast</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.title,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(f.title,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}


                    <label for="Number" class="col-sm-4 col-form-label">Rating</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.rating,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.rating,{'attr':{'class':'text-danger'}}) }}


                    <label for="inputText" class="col-sm-4 col-form-label">Views</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.views,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.views,{'attr':{'class':'text-danger'}}) }}    


                    <label for="file">Image</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.image,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.image,{'attr':{'class':'text-danger'}}) }}   


                    <label for="file" class="col-sm-4 col-form-label">File</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.file,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.file,{'attr':{'class':'text-danger'}}) }}    


                    <label for="file" class="col-sm-4 col-form-label">Categorie</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.categorie,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(f.file,{'attr':{'class':'text-danger'}}) }}                                                                        


                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>


                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}