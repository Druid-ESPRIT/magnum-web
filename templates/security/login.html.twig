{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
  <div container class="container">
    <div class="row mt-4">
    <form method="post">
      {% if error %}
	<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      <h1 class="h3 mb-3 text-center font-weight-normal">Sign in â€” <a href="{{ url('register_user') }}">Register</a></h1>
      <div class="form-group mx-auto col-lg-4 col-lg-offset-4">
	<label for="inputUsername">Username</label>
	<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
      </div>
      <div class="form-group mx-auto col-lg-4 col-lg-offset-4">
	<label for="inputPassword">Password</label>
	<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
      </div>
      <div class="form-group mx-auto mt-2 col-lg-4 col-lg-offset-4">
	<button class="btn btn-lg btn-primary" type="submit">
	  Sign in
	</button>
	<a href="{{ url('generate_token') }}" class="px-5 align-bottom">Forgot your password?</a>
      </div>
    </form>
  </div>

    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
    <label>
    <input type="checkbox" name="_remember_me"> Remember me
    </label>
    </div>
    #}
{% endblock %}
